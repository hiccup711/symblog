{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block content %}
    <!-- Title -->
    <h1 class="mt-4">{{ post.title }}</h1>

    <!-- Author -->
    <p class="lead">
        by
        <a href="#">Start Bootstrap</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p>Posted on{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</p>

    <hr>

    <!-- Preview Image -->
    {% if post.postImage is not null %}
        <img class="img-fluid rounded" src="{{ asset(post.postImage, 'file_upload') }}" alt="{{ post.title }}">
    {% endif %}

    <hr>

    {{ post.body | raw }}

    <hr>

    <!-- Comments Form -->
    <div class="card my-4">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
            {{ form_start(comment_form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(comment_form) }}
            </div>

            <div class="form-group">
                {{ form_row(comment_form.author) }}
            </div>
            <div class="form-group">
                {{ form_row(comment_form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(comment_form.message) }}
            </div>
            <div class="form-group pl-5">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            {{ form_end(comment_form) }}
        </div>
    </div>

    <!-- Single Comment -->
    {% for comment in post.comments %}
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
                <h5 class="mt-0">{{ comment.author }}</h5>
                {{ comment.message }}
                <button class="btn btn-sm btn-link js-replay-comment-btn" data-post-id="{{ post.id }}"
                        data-parent-id="{{ comment.id }}">回复
                </button>
                {% for children in comment.children %}
                    <div class="media mt-4">
                        <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                        <div class="media-body">
                            <h5 class="mt-0">children.author</h5>
                            children.message
                        </div>
                    </div>
                    <button class="btn btn-sm btn-link js-replay-comment-btn" data-post-id="{{ post.id }}"
                            data-parent-id="{{ children.id }}">回复
                    </button>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

